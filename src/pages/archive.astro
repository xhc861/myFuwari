---
import ArchivePanel from "@components/ArchivePanel.svelte";
import MicroNewsAnnouncement from "@components/MicroNewsAnnouncement.svelte";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { getSortedPostsList } from "../utils/content-utils";

const sortedPostsList = await getSortedPostsList();

// Convert posts to match ArchivePanel's expected type
const postsForArchive = sortedPostsList.map((post) => ({
	slug: post.slug,
	data: {
		title: post.data.title,
		tags: post.data.tags,
		category: post.data.category ?? undefined,
		published: post.data.published,
	},
}));
---

<MainGridLayout title={i18n(I18nKey.archive)}>
    <MicroNewsAnnouncement client:load />
    <ArchivePanel tags={[]} categories={[]} sortedPosts={postsForArchive} client:only="svelte"></ArchivePanel>
</MainGridLayout>

